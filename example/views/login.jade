- if ('undefined' !== typeof errors && errors.length)
  ul#errors
    - each error in errors
      li.error= error
form(action='/login', method='post')
  #login
    label(for=everyauth.password.loginFormFieldName) Login
    input(type='text', name=everyauth.password.loginFormFieldName, value='user')
  #password
    label(for=everyauth.password.passwordFormFieldName) Password
    input(type='password', name=everyauth.password.passwordFormFieldName, value='password')
  #remember
    label(for='remember') Remember?
    input(type="checkbox", name='remember', unchecked)
  #submit
    input(type='submit') Login
  #google
    label(for='google') Google Account?
    a(href='/auth/openid?openid_identifier=https://www.google.com/accounts/o8/id')
      img(style='border: 0px', src='https://www.google.com/favicon.ico')
